@model IEnumerable<StrongStart.Models.Site>

@{
    ViewData["Title"] = "Index";
}

<h1>Sites</h1>

<p>
    <a asp-action="Create">Create New Site</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Site Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                Region Code
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.siteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.region.regionCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.siteID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.siteID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.siteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
