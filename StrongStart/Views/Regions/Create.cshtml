@model StrongStart.Models.Region

@{
    ViewData["Title"] = "Create";
}

<h1>Create A New Region</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Region Code</label>
                <input asp-for="regionCode" class="form-control" />
                <span asp-validation-for="regionCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Region Name</label>
                <input asp-for="regionName" class="form-control" />
                <span asp-validation-for="regionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
