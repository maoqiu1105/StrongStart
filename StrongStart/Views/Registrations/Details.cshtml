@model StrongStart.Models.Training
@using Microsoft.AspNetCore.Identity
@using StrongStart.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
    Boolean isVolunteer = User.IsInRole("Volunteer");
}

<h1>Details</h1>

<div>
    <h4>Registration</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.site)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.site.siteName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.term)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.term.termName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.startTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.startTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.endTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.specInstructions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.specInstructions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.part)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.part)
        </dd>
    </dl>
</div>
<div>
    @if (SignInManager.IsSignedIn(User) && isVolunteer)
    {
        <a asp-action="Register" asp-route-loginStatus="loggedin" asp-route-id="@Model.trainingID">Register</a>
    }
    else
    {
        <a asp-action="Register" asp-route-loginStatus="NOTloggedin" asp-route-id="@Model.trainingID">Register</a>
    }

    <a asp-action="Index">Back to List</a>
</div>
